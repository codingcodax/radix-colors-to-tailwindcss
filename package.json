{
  "name": "cli-template",
  "version": "1.0.0",
  "description": "Template for a CLI using TypeScript",
  "keywords": [
    "cli",
    "typescript"
  ],
  "homepage": "https://github.com/codingcodax/cli-template",
  "bugs": {
    "url": "https://github.com/codingcodax/cli-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codingcodax/cli-template.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Alexis Guzman",
    "url": "https://www.codingcodax.com"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "main": "index.js",
  "bin": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsup",
    "build:silent": "tsup --silent",
    "dev": "pnpx tsx src/index.ts",
    "dev:node": "pnpm build:silent && pnpm start",
    "format": "prettier --write src",
    "format:fix": "prettier --write src",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "pub:beta": "pnpm build && pnpm publish --no-git-checks --access public --tag beta",
    "pub:next": "pnpm build && pnpm publish --no-git-checks --access public --tag next",
    "pub:release": "pnpm build && pnpm publish --access public",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/core": "^0.3.5",
    "@clack/prompts": "^0.8.2",
    "commander": "^12.1.0",
    "consola": "^3.2.3",
    "picocolors": "^1.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "8.57.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
